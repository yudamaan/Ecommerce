@{
    ViewBag.Title = "Product";
}
<link href="~/StyleSheet1.css" rel="stylesheet">
@using Ecommerce.Data;
@using ECommerce.Models;
@model ProductPageViewModel

<div class="row">

    <div class="col-md-3">
        <p class="lead">Shop Name</p>
        <div class="list-group">
            @foreach (Category c in Model.Catergories)
            {
                <a href="/home/index?categoryid=@c.CategoryId" class="list-group-item">@c.CategoryName</a>
            }
        </div>
    </div>

    <div class="col-md-9">

        <div class="thumbnail jzoom">
            <img id="big-image" class="img-responsive" src="~/Images/@Model.Product.Images.FirstOrDefault().FileName" width="250" height="150" alt="">
            <div class="row well" style="margin-left:0px !important; margin-right:0px !important">
                @foreach (Image i in Model.Product.Images)
                {
                    <div class="col-md-2">
                        <span style="cursor:pointer;"><img class="image" src="~/Images/@i.FileName" style="border-color:black" width="100" height="125" /></span>
                    </div>

                }
            </div>
            <hr />
            <div class="caption-full">
                <h4 class="pull-right">@Model.Product.Price.ToString("C")</h4>
                <h4 data-product-id="@Model.Product.ProductId" id="product">@Model.Product.ProductName</h4>
                <p>@Model.Product.Description</p>
                <div class="row">
                    @*<form method="post" action="/home/AddtoCart">*@
                        <select class="dropdown col-md-offset-8 col-md-1" name="quantity">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>

                        <button id="add-to-cart" class="col-md-2 col-md-offset-1 btn btn-primary btn-sm" style="margin-top:0px !important; margin-left:35px !important">Add To Cart</button>
                        @*<input type="hidden" name="productid" value="@Model.Product.ProductId" />*@
                    @*</form>*@
                </div>

            </div>
        </div>
    </div>
</div>

<div class="container">

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Your Website 2014</p>
            </div>
        </div>
    </footer>

</div>
@section Scripts{
<script src="~/Scripts/Product.js"></script>
}

