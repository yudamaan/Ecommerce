@{
    ViewBag.Title = "Index";
}

@using Ecommerce.Data;
@using ECommerce.Models;
@model IndexPageViewModel

<body>
    <!-- Page Content -->
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Shop By Department</p>
                <div class="list-group">
                    @foreach (Category c in Model.Catergories)
                    {
                        <a href="/home/index?categoryId=@c.CategoryId" class="list-group-item">@c.CategoryName</a>
                    }
                   
                </div>
            </div>

            <div class="col-md-9">

                <div class="row carousel-holder">

                    <div class="col-md-12">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img class="slide-image" src="http://placehold.it/800x300" alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="http://placehold.it/800x300" alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="http://placehold.it/800x300" alt="">
                                </div>
                            </div>
                            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    </div>

                </div>
                <br />
                <div class="row">
                    @foreach (Product p in Model.Products)
                    {
                        
                        <div class="col-sm-4 col-lg-4 col-md-4">
                            <div class="thumbnail">
                                <a href="/home/product?productid=@p.ProductId"><img src="~/Images/@p.Images.FirstOrDefault().FileName" style="width:80px; height:100px;" /><span style="cursor:pointer"></span></a>
                                <div class="caption">
                                    <h4 class="pull-right">@p.Price.ToString("C")</h4>
                                    <h4>
                                        @*<a id="product-link" href="/home/product?productid=@p.ProductId">@p.ProductName</a>*@
                                        <a id="product-link" href="/home/product/@p.ProductName">@p.ProductName</a>
                                    </h4>
                                    <p>@p.Description.Substring(0,15)...</p>
                                    
                                </div>
                            </div>
                          
                        </div>
                    }                 
                </div>
                <ul class="pager">
                   
                    @if (Model.ShowNextPage)
                    {
                        <li class="next">
                            
                            <a href="/home/index?categoryid=@Model.CurrentCategory&page=@(Model.PageNumber+1)">Next &rarr;</a>
                        </li>
                    }
                    @if (Model.PageNumber > 1)
                    {
                        <li class="previous">
                            <a href="/home/index?categoryid=@Model.CurrentCategory&page=@(Model.PageNumber-1)"> &larr; Previous</a>
                        </li>
                    }
                </ul>
                @*<div class="row">
                    @if (Model.PageNumber > 1)
                    {
                        <a href="~/home/index" class="col-md-3 btn btn-primary">Previous</a>
                    }
                    @if (Model.PageNumber < 5)
                    {
                        <a href="~/home/index" class="col-md-3 col-md-offset-6 btn btn-primary">Next</a>
                    }
                    
                    
                    
                </div>*@

              
            </div>
        </div>
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>

</body>

@section Scripts{
<script src="~/Scripts/CategoryPage.js"></script>
}